<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#f45555"
    tools:context="com.example.admin.classmanager.Student">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Bunk Meter"
        android:id="@+id/BunkButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:onClick="BunkMeter"
        android:background="#da0d0a" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Course Information"
        android:id="@+id/course"
        android:layout_below="@+id/BunkButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:onClick="Course"
        android:background="#da0d0a" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="logout"
        android:id="@+id/LogOut"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:background="#da0d0a"
        android:onClick="logout" />
</RelativeLayout>
