<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.classmanager.CR"
    android:onClick="createSurvey"
    android:background="#f45555">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Create Notification"
        android:id="@+id/Notification"
        android:onClick="notify"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginTop="31dp"
        android:background="#da0d0a" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Survey"
        android:id="@+id/CreateSurvey"
        android:layout_below="@+id/surveyText"
        android:layout_centerHorizontal="true"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="#da0d0a" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/surveyText"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="Enter Question for Survey"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Bunk Meter"
        android:id="@+id/BunkButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="BunkMeter"
        android:background="#da0d0a" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Course Information"
        android:id="@+id/button2"
        android:onClick="Course"
        android:layout_below="@+id/BunkButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:background="#da0d0a" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/LogOut"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:background="#da0d0a"
        android:textColor="#ffffff" />

</RelativeLayout>
